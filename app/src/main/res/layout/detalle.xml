<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/rlFondo"
    android:padding="20dp"
    android:background="@drawable/backextra">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvTitulo"
        android:hint="Titulo Actividad Complemntaria"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvFecha"
        android:hint="30/08/2015"
        android:layout_below="@+id/tvTitulo"
        android:layout_alignLeft="@+id/tvTitulo"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvProfesor"
        android:layout_alignTop="@+id/tvFecha"
        android:layout_alignRight="@+id/tvTitulo"
        android:layout_alignEnd="@+id/tvTitulo"
        android:hint="Carmelo"
        android:singleLine="true" />
</RelativeLayout>